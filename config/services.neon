# Service definitions
# All application services registered in DI container

services:
    shopContext:
        type: App\Shop\ShopContext
        imported: true

    router:
        type: Nette\Routing\Router
        imported: true

    application.application:
        setup:
            - $errorPresenter('Error:Error')
            - $error4xxPresenter('Error:Error')

    # === Routing ===
    # Router is created manually in Bootstrap.php after shop detection
    # (cannot be here because it needs currentShopTextId which is not available yet)

    # === Shop Detection ===
    # ShopDetector and ShopRepository are used only during bootstrap
    # They are created manually with temporary DB connection

    # ShopContext will be registered dynamically in Bootstrap
    # after shop detection (cannot be autowired here)


    # === Custom Presenter Factory ===
    # PresenterFactory is created manually in Bootstrap.php


