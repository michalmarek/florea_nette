# Main configuration file
# Includes domain mapping and service definitions

includes:
    - domains.neon
    - services.neon


parameters:
    # Application-wide parameters
    productsPerPage: 20
    freeShippingThreshold: 1000
    defaultLocale: cs_CZ


application:
    mapping:
        *: App\UI\*\**Presenter


latte:
    extensions:
        - App\Core\Latte\IconExtension


session:
    expiration: 14 days
    cookie_samesite: Lax
    cookie_httponly: true


http:
    frames: true  # Allow iframes (for payment gateways)


assets:
    mapping:
        default: App\Core\AssetMapper('/assets', %wwwDir%/assets)