{
  "name": "florea/eshop",
  "description": "Florea e-shop - Multi-shop platform",
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": ">=8.3",
    "latte/latte": "^3.0",
    "nette/application": "^3.2",
    "nette/assets": "^1.0",
    "nette/bootstrap": "^3.2",
    "nette/caching": "^3.3",
    "nette/database": "^3.2",
    "nette/di": "^3.2",
    "nette/forms": "^3.2",
    "nette/http": "^3.2",
    "nette/mail": "^4.0",
    "nette/robot-loader": "^4.0",
    "nette/security": "^3.2",
    "nette/utils": "^4.0",
    "tracy/tracy": "^2.10",
    "xqueue/maileon-api-client": "^1.0"
  },
  "require-dev": {
    "nette/tester": "^2.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "App/"
    }
  },
  "minimum-stability": "stable",
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"if (!file_exists('config/local.neon')) { copy('config/local.neon.example', 'config/local.neon'); }\""
    ]
  }
}
