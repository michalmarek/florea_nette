{*
    Breadcrumbs component
    @param array $items - [{name, url, destination, params}] ordered root â†’ current
*}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a n:href="Home:default">{$shopContext->getWebsiteName()}</a>
        </li>
        {foreach $items as $item}
            {if !$iterator->last}
                <li class="breadcrumb-item">
                    <a n:href="$item['destination'], (expand) $item['params']">{$item['name']}</a>
                </li>
            {else}
                <li class="breadcrumb-item active" aria-current="page">{$item['name']}</li>
            {/if}
        {/foreach}
    </ol>
</nav>